<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navHeader"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="48dp"
    android:gravity="bottom"
    android:clickable="true"
    android:focusable="true"
    android:fitsSystemWindows="true">

    <!-- Avatar (dibujo o inicial) -->
    <FrameLayout
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="16dp">

        <!-- Imagen del dibujo personalizado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAvatarDrawing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="44dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivAvatarDrawing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="Avatar personalizado" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Inicial (fallback) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAvatarInitial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="44dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="?attr/colorOnPrimary">

            <TextView
                android:id="@+id/tvAvatarInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="L"
                android:textSize="44sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:gravity="center" />

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lector Apasionado"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- TÃ­tulo dinÃ¡mico segÃºn libros leÃ­dos -->
    <TextView
        android:id="@+id/tvReaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lector apasionado ðŸ”¥"
        android:textSize="14sp"
        android:textColor="?attr/colorOnPrimary"
        android:alpha="0.9"
        android:layout_marginTop="4dp" />

    <!-- Indicador de ediciÃ³n -->
    <TextView
        android:id="@+id/tvEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœï¸ Toca para personalizar"
        android:textSize="11sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:alpha="0.7"
        android:layout_marginTop="8dp" />

</LinearLayout>