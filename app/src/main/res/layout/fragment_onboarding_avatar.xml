<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu avatar"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- SubtÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dibuja una carita con tu dedo âœ¨"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="24dp" />

        <!-- Canvas para dibujar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:cardCornerRadius="140dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginBottom="24dp">

            <com.cielo.applibros.presentation.views.DrawableAvatarView
                android:id="@+id/avatarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Paleta de colores -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¨ Elige un color"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnColor1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/color_button_selector"
                android:contentDescription="Negro"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btnColor2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/color_button_selector"
                android:contentDescription="Rojo"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btnColor3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/color_button_selector"
                android:contentDescription="Verde"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btnColor4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/color_button_selector"
                android:contentDescription="Azul"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btnColor5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/color_button_selector"
                android:contentDescription="Amarillo"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btnColor6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/color_button_selector"
                android:contentDescription="Morado"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <!-- BotÃ³n borrar -->
        <Button
            android:id="@+id/btnClear"
            style="@style/Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ—‘ï¸ Borrar todo"
            android:textSize="19sp"
            android:layout_marginBottom="24dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"
            android:layout_marginVertical="16dp" />

        <!-- OpciÃ³n alternativa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O "
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnUseInitial"
            style="@style/Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usar mi inicial"
            android:textColor="?attr/colorOnSurface"

            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>