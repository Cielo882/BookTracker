<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================ -->
    <!-- ESTILOS GENERALES -->
    <!-- ============================================ -->

    <!-- Estilo para imÃ¡genes circulares -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ============================================ -->
    <!-- ESTILOS DE TEXTO -->
    <!-- ============================================ -->

    <style name="TextAppearance.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.BodySecondary" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- ============================================ -->
    <!-- ESTILOS DE BOTONES -->
    <!-- ============================================ -->

    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- ============================================ -->
    <!-- ESTILOS DE CARDS -->
    <!-- ============================================ -->

    <style name="Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- ============================================ -->
    <!-- BOTTOM SHEET -->
    <!-- ============================================ -->

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="shapeAppearanceOverlay">@style/CustomBottomSheetShape</item>
    </style>

    <style name="CustomBottomSheetShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- ============================================ -->
    <!-- DIALOGS -->
    <!-- ============================================ -->

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Dialog</item>
    </style>

    <style name="ShapeAppearance.Dialog" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- ============================================ -->
    <!-- CHIPS -->
    <!-- ============================================ -->

    <style name="Chip.Choice" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>
    </style>

    <!-- ============================================ -->
    <!-- TEXT INPUT -->
    <!-- ============================================ -->

    <style name="TextInputLayout.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- ============================================ -->
    <!-- FAB -->
    <!-- ============================================ -->

    <style name="FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.FAB</item>
    </style>

    <style name="ShapeAppearance.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">50%</item>
    </style>

    <!-- ============================================ -->
    <!-- DIVIDERS -->
    <!-- ============================================ -->

    <style name="Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

</resources>